<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Dialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@drawable/dialog_ios</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DialogTransparent" parent="@style/Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="ProgressDialog" parent="@style/Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="DialogText">
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">@dimen/text_com</item>
    </style>

    <style name="DialogText.Title">
        <item name="android:textSize">@dimen/text_h1</item>
    </style>
    
    <!-- 按钮 背景蓝色，字体白色 -->
    <style name="Button_Blue">
        <item name="android:background">@color/blue_line</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_com</item>
    </style>

    <!-- 按钮 背景蓝色，字体白色 -->
    <style name="Button_Blue_Color" parent="Button_Blue">
        <item name="android:background">@color/blue_line</item>
    </style>

    <!-- 按钮 背景白色，字体蓝色 -->
    <style name="Button_White" parent="Button_Blue">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/blue_line</item>
    </style>
     <!-- 按钮 背景白色，字体黑色 -->
    <style name="Button_Black" parent="Button_Blue">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="transparentFrameWindowStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/photo_choose_bg</item>
    </style>

    <style name="main_menu_animstyle">
        <item name="android:windowEnterAnimation">@anim/photo_dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/photo_dialog_out_anim</item>
    </style>
    
     <!-- Category list style -->
    <style name="CategoryListStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_google</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/category_list_items</item>
        <item name="android:textColor">@color/category_list_items_text</item>
    </style>

    <!-- 标题栏 -->
    <style name="TopbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_google</item>
        <item name="android:background">#f6f6f7</item>
    </style>
   <!-- 评价的ratingbar -->
    <style name="roomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/evaluate_ratingbar_small</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>
    
    <style name="reg_checkbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_drawable</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:maxHeight">13dp</item>
        <item name="android:minHeight">13dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>