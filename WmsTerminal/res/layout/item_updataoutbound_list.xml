<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"  
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_shelfnum_list"
     >
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginTop="5dp"
        android:background="#DCDCDC" 
        android:id="@+id/rl_upout"       
        >
        <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_light" 
        />
    <TextView
        android:id="@+id/tv_shelf_upout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="ShelfNum. :"
        android:textColor="@color/blank_light"
        android:layout_marginLeft="@dimen/screen_control_spacing"
        android:focusable="false"
         />   
    
    </RelativeLayout>
     <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_light" 
        />
     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"    
        >
        <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_light" 
        />
    <TextView
        android:id="@+id/tv_quantity_upout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="Quantity. :"
        android:textColor="@color/blank_light"
        android:layout_marginLeft="@dimen/screen_control_spacing"
         /> 
         </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_light" 
       />  
  	<LinearLayout 
        android:id="@+id/ll_upout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
 		android:orientation="vertical"
        ></LinearLayout>
  	<LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/ll_btn_upout"
        >
        <RelativeLayout 
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_weight="1"
            >
        <TextView 
        android:id="@+id/tv_btnpicked_wavs"
        android:layout_width="65dip"
        android:layout_height="35dip"
        android:text="Picked"
        android:gravity="center"
        android:layout_marginRight="@dimen/screen_control_spacing"
        android:layout_marginTop="@dimen/screen_control_spacing"
		android:layout_alignParentRight="true"
	    android:background="@color/scan_tab_pressed"
        />
        </RelativeLayout>
         <RelativeLayout 
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_weight="1"
            >
        <TextView 
        android:id="@+id/tv_btnoos_wavs"
        android:layout_width="65dip"
        android:layout_height="35dip"
        android:text="Oos"
        android:gravity="center"
        android:layout_marginLeft="@dimen/screen_control_spacing"
        android:layout_marginTop="@dimen/screen_control_spacing"
	    android:background="@color/scan_tab_pressed"
        />             
        </RelativeLayout>
        
    </LinearLayout>     
  	
  
</LinearLayout>
