<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"  
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
  
   <ListView 
       android:id="@+id/lv_wavs"
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       ></ListView>
    <LinearLayout 
        android:id="@+id/ll_wavs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
 		android:orientation="vertical"
        ></LinearLayout>
 
  <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <RelativeLayout 
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_weight="1"
            >
        <TextView 
        android:id="@+id/tv_btnpicked_wavs"
        android:layout_width="65dip"
        android:layout_height="35dip"
        android:text="Picked"
        android:gravity="center"
        android:layout_marginRight="@dimen/screen_control_spacing"
        android:layout_marginTop="@dimen/screen_control_spacing"
		android:layout_alignParentRight="true"
	    android:background="@color/scan_tab_pressed"
        />
        </RelativeLayout>
         <RelativeLayout 
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_weight="1"
            >
        <TextView 
        android:id="@+id/tv_btnoos_wavs"
        android:layout_width="65dip"
        android:layout_height="35dip"
        android:text="Oos"
        android:gravity="center"
        android:layout_marginLeft="@dimen/screen_control_spacing"
        android:layout_marginTop="@dimen/screen_control_spacing"
	    android:background="@color/scan_tab_pressed"
        />             
        </RelativeLayout>
        
    </LinearLayout>     

                  
</LinearLayout>
