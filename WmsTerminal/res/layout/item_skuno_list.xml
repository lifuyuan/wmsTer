<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"  
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
  <RelativeLayout
        android:id="@+id/rl_pallet"
        android:layout_width="match_parent"
        android:layout_height="39dp"
          >
      <TextView
        android:id="@+id/tv_sku_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="input SKU No. :"
        android:textColor="@color/blank_light" 
        android:layout_marginLeft="@dimen/screen_control_spacing"
        />
    
    <com.wmsterminal.common.view.ClearableEditText 
        android:id="@+id/et_input_sku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_sku_list"
        android:layout_marginLeft="5dp"
        android:background="@null"
        android:layout_centerVertical="true"
        android:hint="input box"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_light"
        android:textSize="12dp"
        android:singleLine="true"
        app:clearBtnDrawable="@drawable/common_input_box_clear"
        app:clearBtnDrawableHeight="20dp"
        app:clearBtnDrawableWidth="20dp"
        android:layout_marginRight="@dimen/screen_control_spacing"
        />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_light" 
        />
</LinearLayout>
