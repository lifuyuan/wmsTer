<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    android:fillViewport="true">

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_output1"
    >

   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginTop="53dp"
        android:layout_marginLeft="@dimen/screen_control_spacing">
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="outbound SKU No. :"
        android:textColor="@color/blank_light" />
    
    <EditText 
        android:id="@+id/et_output_skuno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textView1"
        android:layout_marginLeft="5dp"
        android:background="@null"
        android:layout_centerVertical="true"
        android:hint="输入框"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_light"
        android:textSize="12dp"
        android:singleLine="true"
        />
    </RelativeLayout>
     <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_light" 
        android:layout_marginLeft="@dimen/screen_control_spacing"/>
 
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
       >
  
    <LinearLayout 
        android:id="@+id/ll_output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
 		android:orientation="vertical"
        ></LinearLayout>
 
    </RelativeLayout>
         
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <RelativeLayout 
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_weight="1"
            >
        <TextView 
        android:id="@+id/tv_output_next"
        android:layout_width="65dip"
        android:layout_height="35dip"
        android:text="next"
        android:gravity="center"
        android:layout_marginRight="@dimen/screen_control_spacing"
        android:layout_marginTop="@dimen/screen_control_spacing"
		android:layout_alignParentRight="true"
	    android:background="@color/scan_tab_pressed"
        />
        </RelativeLayout>
         <RelativeLayout 
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_weight="1"
            >
        <TextView 
        android:id="@+id/tv_output_finish"
        android:layout_width="65dip"
        android:layout_height="35dip"
        android:text="finish"
        android:gravity="center"
        android:layout_marginLeft="@dimen/screen_control_spacing"
        android:layout_marginTop="@dimen/screen_control_spacing"
	    android:background="@color/scan_tab_pressed"
        />
             
         </RelativeLayout>
        
    </LinearLayout>
                  
</LinearLayout>
   </ScrollView>
