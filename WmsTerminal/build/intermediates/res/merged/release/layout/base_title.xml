<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
   android:layout_height="@dimen/title_height"
    >
    
    <ImageView 
        android:id="@+id/iv_title_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_db_door"
        android:layout_marginLeft="@dimen/screen_control_spacing"
        android:layout_centerVertical="true"
        />
     <ImageView 
        android:id="@+id/iv_title_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_db_people"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/screen_control_spacing"
        android:layout_centerVertical="true"
        />
     <ImageView 
        android:id="@+id/iv_title_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_db_energy"
        android:layout_toLeftOf="@id/iv_title_set"
        android:layout_marginRight="15dip"
        android:layout_centerVertical="true"
        />
     

</RelativeLayout>
