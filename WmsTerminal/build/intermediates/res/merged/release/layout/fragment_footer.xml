<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_fragment_footer"
    style="@style/AppThemeBackgroundWhite"
    android:layout_width="match_parent"
    android:layout_height="@dimen/footer_height"
    android:orientation="vertical">

    <include layout="@layout/line_no_margin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.wmsterminal.common.view.CheckableTextView
            android:id="@+id/ctv_wms"
            android:textSize="@dimen/main_text_h9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:drawablePadding="0dip"
            android:text="@string/wms"
            android:textColor="@color/color_white" 
            android:background="@drawable/footer_wms"
            />

        <com.wmsterminal.common.view.CheckableTextView
            android:id="@+id/ctv_scan"
            android:textSize="@dimen/main_text_h9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/scanprint"
            android:textColor="@color/color_white" 
            android:background="@drawable/footer_wms"
            />
        

        

       
    </LinearLayout>

</LinearLayout>