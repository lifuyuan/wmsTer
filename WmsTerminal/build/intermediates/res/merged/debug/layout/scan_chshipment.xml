<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"  
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    android:fillViewport="true">

<LinearLayout
    android:id="@+id/ll_input1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginTop="53dp"
        
        >
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="Parcel No 1. :"
        android:textColor="@color/blank_light" 
        android:layout_marginLeft="@dimen/screen_control_spacing"
        />
    
    <com.wmsterminal.common.view.ClearableEditText 
        android:id="@+id/et_parcelno_cs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textView1"
        android:layout_marginLeft="5dp"
        android:background="@null"
        android:layout_centerVertical="true"
        android:hint="input box"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_light"
        android:textSize="12dp"
        android:singleLine="true"
        app:clearBtnDrawable="@drawable/common_input_box_clear"
        app:clearBtnDrawableHeight="20dp"
        app:clearBtnDrawableWidth="20dp"
        android:layout_marginRight="@dimen/screen_control_spacing"
        />
    </RelativeLayout>
     <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_light" 
        />     
     <RelativeLayout
        android:id="@+id/rl_sku"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:background="#DCDCDC"
        >
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="ShipMent No 1. :"
        android:textColor="@color/blank_light" 
        android:layout_marginLeft="@dimen/screen_control_spacing"
        android:background="#DCDCDC"
        />
    
    <com.wmsterminal.common.view.ClearableEditText 
        android:id="@+id/et_shipmentno_cs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textView2"
        android:layout_marginLeft="5dp"
        android:background="@null"
        android:layout_centerVertical="true"
        android:hint="input box"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_light"
        android:textSize="12dp"
        android:singleLine="true"
        app:clearBtnDrawable="@drawable/common_input_box_clear"
        app:clearBtnDrawableHeight="20dp"
        app:clearBtnDrawableWidth="20dp"
        android:layout_marginRight="@dimen/screen_control_spacing"
        />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_light" 
        />
 
    <LinearLayout 
        android:id="@+id/ll_shipment_scan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        ></LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
       >
  

    </RelativeLayout>
         
          <RelativeLayout 
             android:layout_width="match_parent"
             android:layout_height="match_parent"
            >
        </RelativeLayout>
        

                  
</LinearLayout>
   </ScrollView>
